<h1>Rejestracja</h1>

<form action="/action/register" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" placeholder="Type a name" name="name" id="name" autocomplete="off" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" placeholder="Type email adress" name="email" id="email" autocomplete="off" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" placeholder="Type password" name="password" id="password" autocomplete="off" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="password_confirmation">Confirm Password</label>
        <input type="password" placeholder="Type password" name="password_confirmation" id="password_confirmation" class="form-control" autocomplete="off" required>
    </div>

    <button type="submit" class="btn btn-block btn-outline-success">Wy≈õlij</button>
</form>