<h1>Edycja id = {{userInfo.dataValues.userId}}</h1>

<form action="/action/update/{{userInfo.dataValues.userId}}?_method=PUT" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" placeholder="Type a name" name="name" id="name" autocomplete="off" value="{{userInfo.dataValues.name}}" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>  
        <input type="password" placeholder="Type password" name="password" id="password" autocomplete="off" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-block btn-primary">Wy≈õlij</button>
</form>